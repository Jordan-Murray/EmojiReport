<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryNavy"
    tools:context=".JoinOrCreateTeam">

    <TextView
        android:id="@+id/joinOrCreateTeam_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato"
        android:text="Emoji Report"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        android:textColor="@color/colorTextWhite"/>

    <ImageView
        android:id="@+id/joinOrCreateTeam_logo"
        android:layout_width="119dp"
        android:layout_height="112dp"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/lato"
        android:outlineAmbientShadowColor="@color/colorAccentPink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/emoji_action_name"
        tools:ignore="VectorDrawableCompat" />

    <Button
        android:id="@+id/joinOrCreateTeam_joinTeam"
        android:layout_width="113dp"
        android:layout_height="37dp"
        android:background="@color/colorAccentPink"
        android:fontFamily="@font/lato"
        android:text="Join a Team"
        android:textColor="@color/colorTextWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.514" />

    <Button
        android:id="@+id/joinOrCreateTeam_createTeam"
        android:layout_width="113dp"
        android:layout_height="37dp"
        android:background="@color/colorAccentPink"
        android:fontFamily="@font/lato"
        android:text="Create a Team"
        android:textColor="@color/colorTextWhite"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.666" />

</androidx.constraintlayout.widget.ConstraintLayout>
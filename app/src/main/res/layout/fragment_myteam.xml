<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryNavy">

    <Button
        android:id="@+id/myTeam_leaveTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="315dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="Leave Team"
        android:background="@color/colorAccentPink"
        android:textColor="@color/colorTextWhite"
        android:onClick="logout"/>


    <com.example.navexample.AutoResizeTextView
        android:id="@+id/myTeam_teamName"
        android:layout_width="188dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorTextWhite"
        android:maxLines="1"
        android:text="Team Name"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/myTeam_weekNumberLeftArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_toStartOf="@+id/myTeam_weekNumber"
        android:layout_toLeftOf="@+id/myTeam_weekNumber"
        android:background="@color/colorPrimaryNavy"
        android:src="@drawable/left_arrow" />

    <ImageButton
        android:id="@+id/myTeam_weekNumberRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="85dp"
        android:layout_toEndOf="@+id/myTeam_weekNumber"
        android:layout_toRightOf="@+id/myTeam_weekNumber"
        android:background="@color/colorPrimaryNavy"
        android:src="@drawable/right_arrow" />

    <TextView
        android:id="@+id/myTeam_weekNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:fontFamily="@font/lato"
        android:textColor="@color/colorTextWhite"
        android:text="Week Number: "
        android:textSize="20sp" />


    <TextView
        android:id="@+id/myTeam_membersTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="75dp"
        android:fontFamily="@font/lato"
        android:text="Members"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/myTeam_moodTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="265dp"
        android:fontFamily="@font/lato"
        android:text="Mood"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/myTeam_teamMembers"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:background="@color/colorAccentBlue"/>

    <TextView
        android:id="@+id/myTeam_averageMood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/lato"
        android:text="Average Mood:"
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/myTeam_averageMoodImage"
        android:layout_width="45dp"
        android:layout_height="54dp"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="485dp"
        android:src="@drawable/very_happy" />

    <TextView
        android:id="@+id/myTeam_teamPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="55dp"
        android:fontFamily="@font/lato"
        android:text="Team Password: "
        android:textColor="@color/colorTextWhite"
        android:textSize="20sp" />


</RelativeLayout>